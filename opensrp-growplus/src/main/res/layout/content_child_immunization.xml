<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.smartregister.growplus.activity.ChildImmunizationActivity"
    tools:showIn="@layout/app_bar_child_immunization">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/immun_child_card_height_growplus"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/card_view_corner_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:id="@+id/profile_name_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/profile_image_iv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/child_transgender_inflant"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_weight="1">

                    <org.smartregister.view.customcontrols.CustomFontTextView
                        android:id="@+id/name_tv"
                        style="@style/CustomFontTextViewStyle.ClientList.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Joyce Mwansa"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/activity_title_size" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <org.smartregister.view.customcontrols.CustomFontTextView
                            android:id="@+id/age_label"
                            style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/birthdate_age"
                            android:textColor="@color/dark_grey"
                            android:textSize="14sp" />
                        <org.smartregister.view.customcontrols.CustomFontTextView
                            android:id="@+id/age_tv"
                            style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="Age"
                            android:textColor="@color/dark_grey"
                            android:textSize="14sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <org.smartregister.view.customcontrols.CustomFontTextView
                            android:id="@+id/child_id_tv_label"
                            style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/systen_id"
                            android:textColor="@color/dark_grey"
                            android:textSize="14sp" />
                        <org.smartregister.view.customcontrols.CustomFontTextView
                            android:id="@+id/child_id_tv"
                            style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="EIR"
                            android:textColor="@color/dark_grey"
                            android:textSize="14sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <org.smartregister.view.customcontrols.CustomFontTextView
                            android:id="@+id/birthdate_id_tv_label"
                            style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/birth_date"
                            android:textColor="@color/dark_grey"
                            android:textSize="14sp" />
                        <org.smartregister.view.customcontrols.CustomFontTextView
                            android:id="@+id/dob_tv"
                            style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="EIR"
                            android:textColor="@color/dark_grey"
                            android:textSize="14sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <org.smartregister.view.customcontrols.CustomFontTextView
                            android:id="@+id/father_name_id_tv_label"
                            style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/father_name"
                            android:textColor="@color/dark_grey"
                            android:textSize="14sp" />
                        <org.smartregister.view.customcontrols.CustomFontTextView
                            android:id="@+id/father_name_id_tv"
                            style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="EIR"
                            android:textColor="@color/dark_grey"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <org.smartregister.view.customcontrols.CustomFontTextView
                            android:id="@+id/mother_name_id_tv_label"
                            style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mother_name"
                            android:textColor="@color/dark_grey"
                            android:textSize="14sp" />
                        <org.smartregister.view.customcontrols.CustomFontTextView
                            android:id="@+id/mother_name_id_tv"
                            style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="EIR"
                            android:textColor="@color/dark_grey"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <org.smartregister.view.customcontrols.CustomFontTextView
                            android:id="@+id/birth_weight_id_tv_label"
                            style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/birth_weight"
                            android:textColor="@color/dark_grey"
                            android:textSize="14sp" />
                        <org.smartregister.view.customcontrols.CustomFontTextView
                            android:id="@+id/birth_weight_id_tv"
                            style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="EIR"
                            android:textColor="@color/dark_grey"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="12.5dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_more_vert" />
            </LinearLayout>


        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_category_horizontal_margin"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:clickable="false"
                android:foreground="?android:attr/selectableItemBackground"
                android:minHeight="135dp"
                app:cardCornerRadius="@dimen/card_view_corner_radius"
                app:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp">

                    <org.smartregister.view.customcontrols.CustomFontTextView
                        style="@style/CustomFontTextViewStyle.ClientList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weight_for_age"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/activity_sub_title_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:id="@+id/record_weight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:background="@drawable/record_weight_bg"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingBottom="16dp"
                            android:paddingTop="16dp">

                            <ImageView
                                android:id="@+id/record_weight_check"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="3dp"
                                android:src="@drawable/ic_action_check"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/record_weight_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/record_weight"
                                android:textAllCaps="false"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/text_black"
                                android:textSize="19sp" />
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/growth_chart_button"
                            android:src="@drawable/ic_icon_growth_chart"
                            android:background="@null"
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_marginLeft="@dimen/card_category_horizontal_margin"
                            android:layout_weight="0.5" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_category_vertical_margin"
                android:layout_weight="1"
                android:background="@color/white"
                android:clickable="false"
                android:foreground="?android:attr/selectableItemBackground"
                android:minHeight="135dp"
                app:cardCornerRadius="@dimen/card_view_corner_radius"
                app:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp">

                    <org.smartregister.view.customcontrols.CustomFontTextView
                        android:id="@+id/child_siblings_tv"
                        style="@style/CustomFontTextViewStyle.ClientList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/his_her_siblings"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/activity_sub_title_size" />

                    <org.smartregister.growplus.view.SiblingPicturesGroup
                        android:id="@+id/sibling_pictures"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_category_horizontal_margin"
            android:background="@color/white"
            android:clickable="false"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="@dimen/card_view_corner_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp">

                    <org.smartregister.view.customcontrols.CustomFontTextView
                        style="@style/CustomFontTextViewStyle.ClientList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/counselling_service"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/activity_sub_title_size" />

                    <org.smartregister.view.customcontrols.CustomFontTextView
                        android:id="@+id/dob_tv"
                        style="@style/CustomFontTextViewStyle.ClientList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/activity_sub_title_size" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/service_group_canvas_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vaccine_group_canvas_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/counselling_group_canvas_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_category_horizontal_margin"
            android:background="@color/white"
            android:clickable="false"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="@dimen/card_view_corner_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                >
                <org.smartregister.view.customcontrols.CustomFontTextView
                    android:id="@+id/FollowUp"
                    style="@style/CustomFontTextViewStyle.ClientList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/status_iv"
                    android:background="@null"
                    android:text="@string/fw_women"
                    android:textColor="@color/text_black"
                    android:textSize="14sp" />


                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <org.smartregister.view.customcontrols.CustomFontTextView
                            android:id="@+id/date_visit"
                            style="@style/CustomFontTextViewStyle.ClientList"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/status_iv"
                            android:background="@null"
                            android:text="@string/visit_date"
                            android:textColor="@color/text_black"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/child_visit_date"
                            style="@style/CustomFontTextViewStyle.ClientList"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"

                            android:gravity="center_vertical"
                            android:text="20.7.2019"
                            android:textColor="@color/text_black" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/child_followup_details"
                        style="@style/CustomFontTextViewStyle.ClientList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:text="@string/view_detail"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_category_horizontal_margin"
            android:background="@color/white"
            android:clickable="false"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="@dimen/card_view_corner_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/weight_group_canvas_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">




                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</ScrollView>
