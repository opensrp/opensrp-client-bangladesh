<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/register_columns"
	android:layout_width="match_parent"
	android:layout_height="@dimen/register_list_item_row_height_cbhc"
	android:layout_margin="5dp"
	android:layout_weight="1"
	android:background="@color/white"
	android:orientation="horizontal">
	<ImageView
		android:id="@+id/imageViewregistericon"
		android:layout_width="@dimen/cbhc_register_list_item_icon"
		android:layout_height="@dimen/cbhc_register_list_item_icon"
		android:layout_gravity="center"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="10dp"
		android:scaleType="fitXY"
		app:srcCompat="@drawable/household_cbhc_placeholder" />

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:orientation="horizontal">



		<LinearLayout
			android:id="@+id/patient_column"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginEnd="5dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="5dp"
			android:layout_marginStart="5dp"
			android:layout_weight="1"
			android:gravity="center"
			android:orientation="vertical">

			<org.smartregister.view.customcontrols.CustomFontTextView
				android:id="@+id/patient_name"
				style="@style/CustomFontTextViewStyle.ClientList.Medium"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="0dp"
				android:text="Patient Name"
				android:textColor="@color/text_black"
				android:textSize="14sp" />

			<LinearLayout
				android:id="@+id/age_ga_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<org.smartregister.view.customcontrols.CustomFontTextView
					android:id="@+id/age"
					style="@style/CustomFontTextViewStyle.ClientList.Light"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="0dp"
					android:text="2 yrs"
					android:textColor="@color/dark_grey_text"
					android:textSize="12sp" />

				<org.smartregister.view.customcontrols.CustomFontTextView
					android:id="@+id/ga"
					style="@style/CustomFontTextViewStyle.ListView.Small"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="10dp"
					android:text="GA: 12 weeks"
					android:textColor="@color/text_black"
					android:textSize="16sp"
					android:visibility="gone" />

			</LinearLayout>


			<org.smartregister.view.customcontrols.CustomFontTextView
				android:id="@+id/anc_id"
				style="@style/CustomFontTextViewStyle.ClientList.Light"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="0dp"
				android:text="Thana Shibpur"
				android:textColor="#9d9d9d"
				android:textSize="12sp" />

			<org.smartregister.view.customcontrols.CustomFontTextView
				android:id="@+id/member_count"
				style="@style/CustomFontTextViewStyle.ClientList.Light"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="0dp"
				android:text="@string/members"
				android:textColor="@color/customAppThemeBlue"
				android:textSize="12sp" />

			<org.smartregister.view.customcontrols.CustomFontTextView
				android:id="@+id/last_interacted_with"
				style="@style/CustomFontTextViewStyle.ClientList.Light"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="left"
				android:paddingLeft="0dp"
				android:paddingRight="5dp"
				android:text="29 Dec 2018"
				android:textColor="@android:color/black"
				android:textSize="12sp"
				android:textStyle="bold" />

		</LinearLayout>

		<LinearLayout
			android:id="@+id/risk_layout"
			android:layout_width="@dimen/member_marker_column"
			android:layout_height="match_parent"
			android:layout_marginBottom="1dp"
			android:layout_marginLeft="2dp"
			android:layout_marginRight="4dp"
			android:layout_marginTop="1dp"
			android:gravity="center_vertical"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="1dp"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/female_child_present"
					android:layout_width="25dp"
					android:layout_height="25dp"
					android:layout_margin="1dp"
					android:layout_weight="1"
					android:scaleType="fitXY"
					app:srcCompat="@drawable/female_child_cbhc" />

				<org.smartregister.view.customcontrols.CustomFontTextView
					android:id="@+id/child_girl_count"
					style="@style/CustomFontTextViewStyle.ClientList.Medium"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_marginStart="2dp"
					android:paddingLeft="0dp"
					android:text="00"
					android:textColor="#9d9d9d"
					android:textSize="12sp" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="1dp"
				android:layout_marginRight="1dp"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/male_child_present"
					android:layout_width="25dp"
					android:layout_height="25dp"
					android:layout_margin="1dp"
					android:layout_weight="1"
					android:scaleType="fitXY"
					app:srcCompat="@drawable/male_child_cbhc" />

				<org.smartregister.view.customcontrols.CustomFontTextView
					android:id="@+id/child_boy_count"
					style="@style/CustomFontTextViewStyle.ClientList.Medium"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_marginStart="2dp"
					android:paddingLeft="0dp"
					android:text="00"
					android:textColor="#9d9d9d"
					android:textSize="12sp" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="1dp"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/pregnant_woman_present"
					android:layout_width="25dp"
					android:layout_height="25dp"
					android:layout_margin="1dp"
					android:layout_weight="1"
					android:scaleType="fitXY"
					app:srcCompat="@drawable/pregnant_woman" />

				<org.smartregister.view.customcontrols.CustomFontTextView
					android:id="@+id/pregnant_woman_count"
					style="@style/CustomFontTextViewStyle.ClientList.Medium"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_marginEnd="1dp"
					android:layout_marginStart="1dp"
					android:paddingLeft="0dp"
					android:text="00"
					android:textColor="#9d9d9d"
					android:textSize="12sp" />
			</LinearLayout>

			<TextView
				android:id="@+id/risk"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/grey_border"
				android:drawableLeft="@drawable/icon_referral_warning"
				android:drawablePadding="2dp"
				android:padding="2.5dp"
				android:text="2"
				android:textColor="@color/dark_grey_text"
				android:textSize="16sp"
				android:visibility="gone" />

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_width="72dp"
		android:layout_height="match_parent"
		android:layout_alignParentEnd="true"
		android:layout_centerVertical="true"
		android:layout_marginBottom="8dp"
		android:layout_marginRight="1dp"
		android:layout_marginTop="8dp"
		android:orientation="vertical"
		android:gravity="center">

		<ImageView
			android:id="@+id/due_button"
			android:layout_width="55dp"
			android:layout_height="55dp"
			android:layout_gravity="center"
			android:layout_margin="5dp"
			android:adjustViewBounds="true"
			android:background="@android:color/transparent"
			android:elevation="3dp"
			android:gravity="center"
			android:hapticFeedbackEnabled="true"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"
			android:src="@drawable/add_member"
			android:stateListAnimator="@drawable/button"
			android:typeface="normal" />

		<Button
			android:id="@+id/sync"
			style="?android:attr/borderlessButtonStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:background="@color/transparent"
			android:elevation="8dp"
			android:padding="@dimen/advanced_search_button_padding"
			android:stateListAnimator="@drawable/button"
			android:text="@string/sync"
			android:textAllCaps="true"
			android:textAppearance="?android:textAppearanceSmall"
			android:textColor="@color/button_navy_blue"
			android:textSize="@dimen/advanced_search_text_size"
			android:visibility="gone" />
		<!--<org.smartregister.view.customcontrols.CustomFontTextView-->
			<!--android:id="@+id/last_interacted_with"-->
			<!--style="@style/CustomFontTextViewStyle.ClientList.Light"-->
			<!--android:layout_width="match_parent"-->
			<!--android:layout_height="wrap_content"-->
			<!--android:paddingLeft="0dp"-->
			<!--android:paddingRight="5dp"-->
			<!--android:textStyle="bold"-->
			<!--android:text="29 Dec 2018"-->
			<!--android:gravity="right"-->
			<!--android:textColor="@android:color/black"-->
			<!--android:textSize="10sp" />-->
	</LinearLayout>
</LinearLayout>
