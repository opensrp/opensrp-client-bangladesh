<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_nav_bar_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/customAppThemeBlue"
    android:focusableInTouchMode="true"
    tools:showIn="@layout/toolbar_register">

    <RelativeLayout
        android:id="@+id/top_left_layout"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/scanQrCode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_margin="3dp"
            android:gravity="center"
            android:src="@drawable/opensrp_white_logo_back" />

        <ProgressBar
            android:id="@+id/sync_progress_bar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/top_left_layout"
        android:layout_toLeftOf="@+id/top_right_layout"
        android:layout_toRightOf="@id/top_left_layout"
        android:layout_toStartOf="@+id/top_right_layout"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/opensrp_logo_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:adjustViewBounds="false"
            android:contentDescription="@string/app_name"
            android:scaleType="center"
            android:visibility="invisible"
            android:src="@drawable/cbhc" />
        <Button
            android:id="@+id/refer_cmed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="3dp"
            android:gravity="center"
            android:text="Group Activity"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/top_right_layout"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_toLeftOf="@+id/notification_list"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/woman_sync"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="3dp"
            android:gravity="center"
            android:src="@drawable/ic_icon_synchronize" />
        <com.vijay.jsonwizard.views.CustomTextView
            android:id="@+id/unsync_count"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:text="1"
            android:visibility="gone"
            android:textStyle="bold"
            android:textSize="10dp"
            android:gravity="center"
            android:background="@drawable/round_red_background"
            android:textColor="@android:color/white"
            android:layout_width="18dp"
            android:layout_height="18dp" />

    </RelativeLayout>
    <ImageView
        android:id="@+id/notification_list"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_notification"
        android:layout_centerVertical="true"
        android:tint="@color/white"
        android:layout_width="35dp"
        android:layout_height="35dp"/>

</RelativeLayout>